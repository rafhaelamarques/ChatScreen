<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:orientation="vertical">


<RelativeLayout
    android:id="@+id/profile_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:background="@color/transparent"
        android:src="@drawable/back"
        android:layout_marginTop="79.6dp"
        android:layout_marginLeft="25.9dp"/>


    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="57dp"
        android:src="@drawable/profile_pic"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="65dp"
        android:text="Mother ❤"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="@color/primary_blue"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="93dp" />

    <ImageButton
        android:id="@+id/menu_dots"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:background="@color/transparent"
        android:src="@drawable/profile_menu"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="366dp"/>
</RelativeLayout>



<RelativeLayout
    android:id="@+id/list_container"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:layout_below="@+id/profile_container">
    <ListView
        android:id="@+id/listChat"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>


    <RelativeLayout
        android:layout_width="414dp"
        android:layout_height="129dp"
        android:layout_below="@id/list_container"
        android:background="@drawable/chat_edit"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="17dp"
        android:layout_marginVertical="16dp">

        <EditText
            android:layout_width="359dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:hint="Type your message..."
            android:textColor="@color/soft_grey"
            android:background="@drawable/chat_edit"/>

    </RelativeLayout>

</RelativeLayout>